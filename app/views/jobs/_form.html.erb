<div class="form_new">
  <%= form_for @job do |f|%>
    <p><%= f.label :title, 'Título:' %>
    <%= f.text_field :title%> </p>
    <p>
      <%= f.label :company_id, 'Empresa:' %>
      <%= f.collection_select(:company_id, @companies, :id, :name, prompt:'Selecione uma empresa') %>
    </p>
    <p>
      <%= f.label :location, 'Localização:' %>
      <%= f.text_field :location%>

    </p>
    <p>
      <%= f.label :category_id, 'Categoria:' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt:'Selecione uma categoria'  %>
    </p>
    <p>
      <%= f.label :description, 'Descrição:' %>
      <%= f.text_area :description%>
    </p>
    <p><%=f.label :featured, 'Destaque' %>
      <%= f.check_box :featured%>
    </p>
    <%= f.submit button%>

  <% end %>
</div>
