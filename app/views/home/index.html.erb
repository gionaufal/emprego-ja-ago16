<section class='vagas col-md-10'>
  <% @jobs.each do |job| %>
    <div class="vaga col-sm-6">
      <h1><%=link_to(job.title,job)%></h1>

      <p class='left'>Empresa</p>
      <p class='right'><%= job.company.name %></p>
      <p class="left">Localização</p>
      <p class='right'><%= job.location %></p>

      <% if job.featured? %>
        <p class="left"><strong>Destaque</strong></p>
      <% end %>

    </div>
  <% end %>
</section>


<section class='companies col-md-2'>
  <h2>Empresas</h2>
  <% @companies.each do |company| %>
    <p><%= link_to company.name, company%></p>
  <% end %>
  <h2>Categorias</h2>
  <% @categories.each do |category| %>
    <p><%= link_to category.name, category %></p>
  <% end %>
</section>
